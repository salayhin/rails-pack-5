<section class="content-header header-resize">
  <%- model_class = Franchise -%>
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%#= link_to 'New Station',
                new_admin_franchise_path,
                :class => 'btn btn-sm btn-success' %>
  </h1>
  <!--<ol class="breadcrumb">-->
    <!--<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>-->
    <!--<li><a href="#">Tables</a></li>-->
    <!--<li class="active">Simple</li>-->
  <!--</ol>-->
</section>

<div class="col-xs-12">
  <div class="box top-margin">
    <div class="box-header">
      <h3 class="box-title">All Franchises</h3>

      <!--<div class="box-tools">-->
      <!--<div class="input-group input-group-sm" style="width: 150px;">-->
      <!--<input type="text" name="table_search" class="form-control pull-right" placeholder="Search">-->

      <!--<div class="input-group-btn">-->
      <!--<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
    </div>
    <!-- /.box-header -->

    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody><tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%#= model_class.human_attribute_name(:factual_id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:address) %></th>
          <th><%= model_class.human_attribute_name(:locality) %></th>
          <th><%= model_class.human_attribute_name(:region) %></th>
          <th><%= model_class.human_attribute_name(:post_code) %></th>
          <th><%= model_class.human_attribute_name(:country) %></th>
          <th><%#= model_class.human_attribute_name(:telephone) %></th>
          <th><%#= model_class.human_attribute_name(:website) %></th>
          <th><%= model_class.human_attribute_name(:latitude) %></th>
          <th><%= model_class.human_attribute_name(:longitude) %></th>
          <th><%#= model_class.human_attribute_name(:hours_of_operations) %></th>
          <th><%= model_class.human_attribute_name(:category_labels) %></th>
          <th><%#= model_class.human_attribute_name(:chain_name) %></th>
          <th><%#= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t('helpers.actions') %></th>
        </tr>

        <% @franchises.each do |franchise| %>
            <tr>
              <td><%= link_to franchise.id, admin_franchise_path(franchise) %></td>
              <td><%#= franchise.factual_id %></td>
              <td><%= franchise.name %></td>
              <td><%= franchise.address %></td>
              <td><%= franchise.locality %></td>
              <td><%= franchise.region %></td>
              <td><%= franchise.post_code %></td>
              <td><%= franchise.country %></td>
              <td><%#= franchise.telephone %></td>
              <td><%#= franchise.website %></td>
              <td><%= franchise.latitude %></td>
              <td><%= franchise.longitude %></td>
              <td><%= franchise.hours_of_operations %></td>
              <td><%= franchise.category_labels %></td>
              <td><%#= franchise.chain_name %></td>
              <td><%#= (franchise.created_at).strftime('%a, %d %B, %Y') %></td>
              <td>
                <%= link_to t('.show', :default => t('helpers.links.show')),
                            admin_franchise_path(franchise), :class => 'btn btn-sm btn-success' %>
                <%#= link_to t('.edit', :default => t('helpers.links.edit')),
                            edit_admin_franchise_path(franchise), :class => 'btn btn-sm btn-warning' %>
                <%#= link_to t('.destroy', :default => t('helpers.links.destroy')),
                            admin_franchise_path(franchise),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
                            :class => 'btn btn-sm btn-danger' %>
              </td>
            </tr>
        <% end %>

        </tbody></table>
      <div class="pull-right"><strong><%= will_paginate @franchises %></strong></div>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
