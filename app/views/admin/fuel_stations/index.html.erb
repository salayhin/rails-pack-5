<section class="content-header header-resize">
  <%- model_class = FuelStation -%>
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to 'New Station',
                new_admin_fuel_station_path,
                :class => 'btn btn-sm btn-success' %>
  </h1>
  <!--<ol class="breadcrumb">-->
    <!--<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>-->
    <!--<li><a href="#">Tables</a></li>-->
    <!--<li class="active">Simple</li>-->
  <!--</ol>-->
</section>

<div class="col-xs-12">
  <div class="box top-margin">
    <div class="box-header">
      <h3 class="box-title">All Stations</h3>

      <!--<div class="box-tools">-->
      <!--<div class="input-group input-group-sm" style="width: 150px;">-->
      <!--<input type="text" name="table_search" class="form-control pull-right" placeholder="Search">-->

      <!--<div class="input-group-btn">-->
      <!--<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody><tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:latitude) %></th>
          <th><%= model_class.human_attribute_name(:longitude) %></th>
          <th><%= model_class.human_attribute_name(:address) %></th>
          <th><%= model_class.human_attribute_name(:phone_number) %></th>
          <th><%= model_class.human_attribute_name(:comments) %></th>
          <th><%= model_class.human_attribute_name(:color_code) %></th>
          <th><%= model_class.human_attribute_name(:is_active) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t('helpers.actions') %></th>
        </tr>

        <% @fuel_stations.each do |station| %>
            <tr>
              <td><%= link_to station.id, admin_fuel_station_path(station) %></td>
              <td><%= station.name %></td>
              <td><%= station.latitude %></td>
              <td><%= station.longitude %></td>
              <td><%= station.address %></td>
              <td><%= station.phone_number %></td>
              <td><%= station.comments %></td>
              <td><%= station.color_code %></td>
              <td><%= station.is_active %></td>
              <td><%= (station.created_at).strftime('%a, %d %B, %Y') %></td>
              <td>
                <%= link_to t('.show', :default => t('helpers.links.show')),
                            admin_fuel_station_path(station), :class => 'btn btn-sm btn-default' %>
                <%= link_to t('.edit', :default => t('helpers.links.edit')),
                            edit_admin_fuel_station_path(station), :class => 'btn btn-sm btn-warning' %>
                <%= link_to t('.destroy', :default => t('helpers.links.destroy')),
                            admin_fuel_station_path(station),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
                            :class => 'btn btn-sm btn-danger' %>
              </td>
            </tr>
        <% end %>
        </tbody></table>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
