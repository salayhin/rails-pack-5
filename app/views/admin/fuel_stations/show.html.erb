  <!--</ol>-->
</section>

<div class="col-xs-12">
  <div class="box">
    <div class="box-header">

      <!--<div class="box-tools">-->
      <!--<div class="input-group input-group-sm" style="width: 150px;">-->
      <!--<input type="text" name="table_search" class="form-control pull-right" placeholder="Search">-->

      <!--<div class="input-group-btn">-->
      <!--<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody>

        <tr>
          <td><%= model_class.human_attribute_name(:name) %></td>
          <td><%= @fuel_station.name %></td>
        </tr>

        <tr>
          <td><%= model_class.human_attribute_name(:latitude) %></td>
          <td><%= @fuel_station.latitude %></td>
        <tr>


        <tr>
          <td><%= model_class.human_attribute_name(:longitude) %></td>
          <td><%= @fuel_station.longitude %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:address) %></td>
          <td><%= @fuel_station.address %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:phone_number) %></td>
          <td><%= @fuel_station.phone_number %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:comments) %></td>
          <td><%= @fuel_station.comments %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:color_code) %></td>
          <td><%= @fuel_station.color_code %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:is_active) %></td>
          <td><%= @fuel_station.is_active %></td>
        <tr>

        <tr>
          <td><%= model_class.human_attribute_name(:created_at) %></td>
          <td><%= (@fuel_station.created_at).strftime('%a, %d %B, %Y') %></td>
        </tr>

        <tr>
          <td>
            <%= link_to t('.show', :default => t('helpers.links.show')),
                        admin_fuel_station_path(@fuel_station), :class => 'btn btn-sm btn-default' %>
            <%= link_to t('.edit', :default => t('helpers.links.edit')),
                        edit_admin_fuel_station_path(@fuel_station), :class => 'btn btn-sm btn-warning' %>
            <%= link_to t('.destroy', :default => t('helpers.links.destroy')),
                        admin_fuel_station_path(@fuel_station),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
                        :class => 'btn btn-sm btn-danger' %>
          </td>
        </tr>

        </tbody></table>
    </div>
